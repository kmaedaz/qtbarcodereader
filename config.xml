<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wixsite.cybertube.qtbarcodereader" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>QtBarCodeScan</name>
    <description>
        バーコードを読んで、詳細表示する。
    </description>
    <author email="maeda.ko1ro@gmail.com" href="http://cordova.io">
        CyberTube Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/icon/icon.png" />
    <plugin name="cordova-plugin-barcodescanner" spec="^0.7.4" />
    <plugin name="cordova-plugin-admob-free" spec="0.24.0">
        <variable name="ADMOB_APP_ID" value="ca-app-pub-4190072104113498/2748516682" />
    </plugin>
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-app-version" spec="^0.1.9" />
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^7.1.4" />
    <plugin name="cordova-plugin-flashlight" spec="^3.2.0" />
</widget>
